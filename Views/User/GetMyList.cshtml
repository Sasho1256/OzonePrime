@model List<Film>
@{
	ViewData["Title"] = "My list";
}

<h1 class="display-4">My list</h1>
<br>

<form asp-controller="User" asp-action="RemoveFilmFromMyList" method="post">
	<ul>

		@for (int i = 0; i < Model.Count; i++)
		{
		<li><a onclick="location.href='@Url.Action("FilmInfoInMyList", "Film", Model[i])'">@Model[i].Name</a> <button type="submit" style="background-color: indianred; color: white" name="filmId" value="@Model[i].Id.ToString()">X</button></li>
		}

	</ul>
</form>

<input type="button" style="background-color: darkgray; color: white" value="Go back" onclick="location.href='@Url.Action("UserProfile", "User")'" />
